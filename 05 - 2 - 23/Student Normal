import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;
class student
{
    private  String name;
    private int rollno;
    private int year;
    private String branch;
    private List <Integer> marks;
    private static int nostudents;
    public student(String name,int rollno,int year,String branch){
        this.name=name;
        this.rollno=rollno;
        this.year=year;
        this.branch=branch;
        marks = new ArrayList<>();
        nostudents++;
    }
    public String getName(){
        return name;
    }
    public int getRollno(){
        return rollno;
    }
    public int getYear(){
        return year;
    }
    public String getBranch(){
        return branch;
    }
    public List <Integer> getMarks(){
        return marks;
    }
    public void setMarks(int obtainmark){
        marks.add(obtainmark);
    }
    public void display(){
        System.out.println(rollno+" "+name+" "+branch+" "+year);
    }
    public double computePercentage(){
        double sum = 0;
        for(Integer mark : marks){
            sum+=mark;
        }
        if(marks.size()==0)
            return 0;
        return sum/marks.size();
    }
    public static void numstuds(){
        System.out.println("NoOfStudents="+nostudents);
    }
}
public class Solution {
public static void main(String[] args) {
    Scanner in = new Scanner(System.in);
    int n = Integer.parseInt(in.nextLine());
    for (int i=0;i<n;i++){
            String [] line =in.nextLine().split(" ");
            
            String na=line[0];
            int r=Integer.parseInt(line[1]);
            String b=line[2];
            int y=Integer.parseInt(line[3]);
            
            student s=new student(na,r,y,b);
            String [] nums =in.nextLine().split(" ");
            for (int j=0;j<nums.length;j++){
                s.setMarks(Integer.parseInt(nums[j]));
            }
            System.out.println(r+" "+na+" "+b+" "+y);
            System.out.print(r+" ");
            System.out.printf("%.2f",s.computePercentage());
            System.out.println();
        }    
            student.numstuds();
}
}
